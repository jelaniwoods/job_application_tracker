<%= search_form_for @q, :class => collapse_search_form, :id => "interviews_filters" do |f| %>
  <p class="lead">Narrow results:</p>

  <div class="form-group">
    <%= f.label :starts_on, "Starts on" %>
    <div class="row">
      <div class='col-md-6 mb-1'>
        <div class='input-group date' id='starts_ongteqPicker' data-target-input="nearest">
          <%= f.text_field :starts_on_gteq, :class => "form-control datetimepicker-input", :placeholder => "Starts on greater than or equal to", :data => {:target => '#starts_ongteqPicker'} %>
          <div class="input-group-append" data-target='#starts_ongteqPicker' data-toggle="datetimepicker">
            <div class="input-group-text"><i class="fa fa-calendar"></i></div>
          </div>
        </div>
      </div>

      <div class='col-md-6'>
        <div class='input-group date' id='starts_onlteqPicker' data-target-input="nearest">
          <%= f.text_field :starts_on_lteq, :class => "form-control datetimepicker-input", :placeholder => "Starts on less than or equal to", :data => {:target => '#starts_onlteqPicker'} %>
          <div class="input-group-append" data-target='#starts_onlteqPicker' data-toggle="datetimepicker">
            <div class="input-group-text"><i class="fa fa-calendar"></i></div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <script type="text/javascript">
      $(function () {
          $('#starts_ongteqPicker').datetimepicker({
              format: 'YYYY-MM-DD hh:mm:SS'
          });
          $('#starts_onlteqPicker').datetimepicker({
              useCurrent: false,
              format: 'YYYY-MM-DD hh:mm:SS'
          });
          $('#starts_ongteqPicker').on("dp.change", function (e) {
              $('#starts_onlteqPicker').data("DateTimePicker").minDate(e.date);
          });
          $('#starts_onlteqPicker').on("dp.change", function (e) {
              $('#starts_ongteqPicker').data("DateTimePicker").maxDate(e.date);
          });
      });
  </script>

  <div class="form-group">
    <%= f.label :completed_eq, "Completed" %>
    <div>
      <label class="radio-inline">
        <%= f.radio_button :completed_eq, "1", checked: ((params[:q] && params[:q][:completed_eq]) == "1" ? "checked" : "") %> Yes
      </label>
      <label class="radio-inline">
        <%= f.radio_button :completed_eq, "0", checked: ((params[:q] && params[:q][:completed_eq]) == "0" ? "checked" : "")%> No
      </label>
      <label class="radio-inline">
        <%= f.radio_button :completed_eq, ""%> Either
      </label>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :round, "Round" %>
    <div class="row">
      <div class='col-md-6 mb-1'>
        <%= f.text_field :round_gteq, :class => "form-control", :placeholder => "Round greater than or equal to" %>
      </div>
      <div class='col-md-6'>
        <%= f.text_field :round_lteq, :class => "form-control", :placeholder => "Round less than or equal to" %>
      </div>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :created_at, "Created at" %>
    <div class="row">
      <div class='col-md-6 mb-1'>
        <div class='input-group date' id='created_atgteqPicker' data-target-input="nearest">
          <%= f.text_field :created_at_gteq, :class => "form-control datetimepicker-input", :placeholder => "Created at greater than or equal to", :data => {:target => '#created_atgteqPicker'} %>
          <div class="input-group-append" data-target='#created_atgteqPicker' data-toggle="datetimepicker">
            <div class="input-group-text"><i class="fa fa-calendar"></i></div>
          </div>
        </div>
      </div>

      <div class='col-md-6'>
        <div class='input-group date' id='created_atlteqPicker' data-target-input="nearest">
          <%= f.text_field :created_at_lteq, :class => "form-control datetimepicker-input", :placeholder => "Created at less than or equal to", :data => {:target => '#created_atlteqPicker'} %>
          <div class="input-group-append" data-target='#created_atlteqPicker' data-toggle="datetimepicker">
            <div class="input-group-text"><i class="fa fa-calendar"></i></div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <script type="text/javascript">
      $(function () {
          $('#created_atgteqPicker').datetimepicker({
              format: 'YYYY-MM-DD hh:mm:SS'
          });
          $('#created_atlteqPicker').datetimepicker({
              useCurrent: false,
              format: 'YYYY-MM-DD hh:mm:SS'
          });
          $('#created_atgteqPicker').on("dp.change", function (e) {
              $('#created_atlteqPicker').data("DateTimePicker").minDate(e.date);
          });
          $('#created_atlteqPicker').on("dp.change", function (e) {
              $('#created_atgteqPicker').data("DateTimePicker").maxDate(e.date);
          });
      });
  </script>


  <div class="form-group">
    <%= f.label :job_application_title_cont, "Job application title contains" %>
    <%= f.text_field :job_application_title_cont, :class => "form-control", :placeholder => "Job application title contains" %>
  </div>

  <div class="form-group">
    <%= f.label :applicant_email_cont, "Applicant email contains" %>
    <%= f.text_field :applicant_email_cont, :class => "form-control", :placeholder => "Applicant email contains" %>
  </div>

  <div class="form-group">
    <%= f.label :company_name_cont, "Company name contains" %>
    <%= f.text_field :company_name_cont, :class => "form-control", :placeholder => "Company name contains" %>
  </div>


  <%= f.submit :class => "btn btn-primary btn-block mb-1" %>

  <a href="/interviews" class="btn btn-outline-secondary btn-block mb-1">Clear filters</a>

<% end %>

<a class="btn btn-outline-secondary btn-block mb-1" data-toggle="collapse" href="#interviews_filters">
  Show filters
</a>
