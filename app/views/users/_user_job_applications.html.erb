<div class="card">
  <div class="card-header d-flex align-items-center justify-content-between">
    Job Applications

    <a data-toggle="collapse" href="#user_job_applications_new_form">
      Add job application
    </a>
  </div>

  <ul class="list-group list-group-flush">
    <% @user.job_applications.each do |job_application| %>
      <li class="list-group-item d-flex align-items-center justify-content-between">
        <%= link_to job_application, job_application %>

      </li>
    <% end %>

    <div class="card-footer">
      <div class="collapse" id="user_job_applications_new_form">
        <%= render partial: "users/user_job_applications_new_form" %>
      </div>
    </div>

  </ul>
</div>
