<div class="card">
  <div class="card-header d-flex align-items-center justify-content-between">
    Job Applications

    <a data-toggle="collapse" href="#company_job_applications_new_form">
      Add job application
    </a>
  </div>

  <ul class="list-group list-group-flush">
    <% @company.job_applications.each do |job_application| %>
      <li class="list-group-item d-flex align-items-center justify-content-between">
        <%= link_to job_application, job_application %>

        <% if current_user == job_application.user %>
          <%= link_to job_application, method: :delete do %>
            <i class="fas fa-trash-alt"></i>
          <% end %>
        <% end %>

      </li>
    <% end %>

    <div class="card-footer">
      <div class="collapse" id="company_job_applications_new_form">
        <%= render partial: "companies/company_job_applications_new_form" %>
      </div>
    </div>

  </ul>
</div>
