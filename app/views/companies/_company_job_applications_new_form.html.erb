<%= form_with(model: @job_application, local: true) do |f| %>

  <div class="form-group">
    <%= f.label :title %>

    <%= f.text_field :title, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :due_on %>
    <%= f.datetime_select :due_on, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :status %>

    <%= f.text_field :status, class: "form-control" %>
  </div>

  <%= f.hidden_field :user_id, value: current_user.id %>

  <%= f.hidden_field :company_id, value: @company.id %>

  <%= f.submit "Create job application", class: "btn btn-block btn-outline-secondary" %>
<% end %>
